<UserControl x:Class="SchemaBackup.AdminApp.UserControls.SvnUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="32" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="Path" />
        <TextBox Grid.Column="1" Grid.Row="0" Name="PathTextBox" Style="{StaticResource standardTextBoxStyle}" />
        <Label Grid.Column="0" Grid.Row="1" Content="User Name" />
        <TextBox Grid.Column="1" Grid.Row="1" Name="UserNameTextBox" Style="{StaticResource standardTextBoxStyle}" />
        <Label Grid.Column="0" Grid.Row="2" Content="Password" />
        <TextBox Grid.Column="1" Grid.Row="2" Name="PasswordTextBox" Style="{StaticResource standardTextBoxStyle}" />
    </Grid>
</UserControl>
